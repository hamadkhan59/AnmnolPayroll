                                    <input type="submit" value="Submit" name="SubmitLeaving" class="btn  btn-squar" onclick="return ConfirmAction('Are you sure, you want to releived this student?', 'submitBtn');" id="submitBtn" />
                                </div>
                            </div>

                            @*</form>*@
                        </div>
                    </div>
                </div>

            </fieldset>

        }
    </div>
</div>
</div>


<script>

    function populateErrors()
    {
      @if(ViewData["Error"] != null)
      {
          if ((int)@ViewData["Error"] == 0)
          {
              <text> showNotification(' Releived Entry is submitted succesfully.', 'Success', 'Success') </text>
          }
      else if ((int)@ViewData["Error"] == 420)
          {
              <text> showNotification('Unable to submit Releived Entry.', 'Error', 'Error') </text>
          }
      else if ((int)@ViewData["Error"] == 10)
          {
              <text> showNotification('Releived Entry is removed succesfully.', 'Success', 'Success') </text>
          }
      }
    }

    $(document).ready(function() {
        $('#classTable').DataTable( {
            "lengthMenu": [[-1], ["All"]],
            paging: false

        } );
    } );

    window.onload = function (e) {
        $("#classTable").DataTable();
        populateErrors();
        ShowSearchPanel(@((Model == null || Model.Count == 0) ? 0 : Model.Count));

        @if(Model != null )
        {
            <text>
                $('#leavingDate').val('@(DateTime.Now.ToString("yyyy-MM-dd"))');
        </text>
        }
        

        var classId = '@(ViewData["GlobalClassId"] == null ? 0 : (int)ViewData["GlobalClassId"])';
        if(classId != 0)
        {
            $("#classId").val(classId);
        }
        getSectionList();

    }

    function setPrevSearchVals() {
        var sectionId = '@(ViewData["GlobalSectionId"] == null ? 0 : (int)ViewData["GlobalSectionId"])';


        if (sectionId != 0) {
            $("#sectionId").val(sectionId);
        }
    }

    function getSectionList() {
        var classId = $("#classId").val();
        if(classId.length == 0)
        {
            classId = 0;
        }
        GetClassSection(classId, 1, 'sectionId', 2, 0);
        //first : classId, seccond : load all option or not, third : section dd html id
        //fourth : any call function to call, fifth : sectionId to set in DD
    }

    function getChangeSectionList() {
        var classId = $("#classId").val();
        if (classId.length == 0) {
            classId = 0;
        }
        GetClassSection(classId, 1, 'sectionId', 0, 0);
        //first : classId, seccond : load all option or not, third : section dd html id
        //fourth : any call function to call, fifth : sectionId to set in DD
    }


    function ChangeLeavingDate()
    {
        document.getElementById("leavingDate").value = "";
    }
    function ChangeDuesStatus() {
        if(document.getElementById("dues").value == true)
            document.getElementById("dues").value = false;
        else
            document.getElementById("dues").value = true;
    }
    
    function CheckAllCheckBoxes()
    {
        var rowCount = $('#statusIdAll').val();
        if($("#cbSelectAll").is(':checked') == true)
        {
            for( var i = 0 ; i < rowCount; i++)
            {
                SelectElement("tableId"+i, true);
            }
        }
        else
        {
            for( var i = 0 ; i < rowCount; i++)
            {
                SelectElement("tableId"+i, false);
            }
        }
    }

    function SelectElement(id, valueToSelect)
    {
        var element = document.getElementById(id);
        element.checked  = valueToSelect;
    }


</script>
