<div class="row" id="searchPanelData" style="display:none;">
    <div class="col-md-12 col-sm-12 col-xs-12">
        @using (Html.BeginForm("SubmitReleivedEntry", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="x_panel">

                    <div class="x_title sc_panel_header">

                        <label class="nav navbar-left control-label sc_panel_label" align="left">Students Detail</label>

                        <ul class="nav navbar-right panel_toolbox">

                            <li>
                                @*<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>*@
                            </li>
                            <li>
                                @*<a class="close-link"><i class="fa fa-close"></i></a>*@
                            </li>

                        </ul>

                        

                        @*<form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">*@
                        

                    </div>

                    <div class="x_content">
                        <div class="row" style="margin-top:15px;">
                            <div class="form-group">
                                <label class="control-label col-md-1 col-sm-1 col-xs-12" align="left" for="first-name" style="font-size: 11px;">
                                    Date Of Leaving
                                </label>
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <div>
                                        @*@Html.TextBoxFor(model => model.LeavingDate, new { @type = "date", @class = "form-control input-sm", id = "admissionDate" })*@
                                        <input type="date" name="LeavingDate" class="form-control input-sm" id="leavingDate">
                                    </div>
                                </div>

                                <label class="control-label col-md-1 col-sm-1 col-xs-12" align="left" for="first-name" style="font-size: 11px;">
                                    Leaving Status
                                </label>
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <div>
                                        @Html.DropDownList("Student.LeavingStatus", (IEnumerable<SelectListItem>)ViewBag.StatusId, new { @class = "form-control input-sm", Name = "StatusId" })
                                    </div>
                                </div>

