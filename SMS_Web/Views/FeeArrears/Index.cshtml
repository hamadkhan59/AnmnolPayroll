        </div>
    </div>
</div>


<div class="row" id="searchPanelData" style="display:none;">
    <div class="col-md-12 col-sm-12 col-xs-12">
        @using (Html.BeginForm("GetArrearDetails", "FeeArrears", FormMethod.Post, new { target = "_blank" }))
