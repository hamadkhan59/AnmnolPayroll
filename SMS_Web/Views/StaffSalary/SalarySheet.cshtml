                                            <th class="column-title">
                                                Father Name
                                            </th>
                                            <th class="column-title">
                                                Designation
                                            </th>
                                            <th class="column-title">
                                                Presents
                                            </th>
                                            <th class="column-title">
                                                Absents
                                            </th>
                                            <th class="column-title">
                                                Half Days
                                            </th>
                                            <th class="column-title">
                                                Late Ins
                                            </th>
                                            <th class="column-title">
                                                Early Out
                                            </th>
                                            <th class="column-title">
                                                Basic Salary
                                            </th>
                                            <th class="column-title">
                                                Allownces
                                            </th>
                                            <th class="column-title">
                                                Deduction
                                            </th>
                                            <th class="column-title">
                                                Gross Salary
                                            </th>
                                          
