        $('#classTable > tbody').html("");
        //$("#sectionId").html("");
        //$("#sectionId").append('<option value='+0+'>All</option>');
        if(classId != '' && classId != '0' && sectionId == '' && sectionId == '0')
        {
            //getDetailSectionList();
        }
        @foreach (var item in (IEnumerable<SMS_DAL.ViewModel.RegisterCourseModel>)ViewData["classSubject"])
        {

            <text>
        if(classId == '' || classId == '0' || classId == @(item.ClassId))
        {
            if(sectionId == '' || sectionId == '0' || sectionId == @(item.SectionId))
        {
            var tableRow = '<tr>' +
                    '<td>' +
                        '@( item.ClassName)' +
                    '</td>' +
                    '<td>' +
                        '@( item.SectionName)' +
                    '</td>' +
                    '<td>' +
                        '@( item.SubjectName)' +
                    '</td>' +
                    '<td>' +
                        '@( item.ResultOrder)' +
                                '</td>' +
                                '<td style="color:blue;">' +
                                    '@Html.ActionLink("  ", "Index", new { id = item.RegisterCourseId }, new { style = "color: green;font-size: 15px;", title = "Edit", @class = "glyphicon glyphicon-edit" }) ' +
                                    '@Html.ActionLink("  ", "Index", "ChapterTopic", new { registerCourseId = item.RegisterCourseId, classId = item.ClassId, sectionId = item.SectionId }, new { style = "color: black;font-size: 15px; margin-left: 10px", title = "View Chapters", @class = "glyphicon glyphicon-eye-open" })'+
                                    '@Html.ActionLink("  ", "Delete", new { id = item.RegisterCourseId }, new { onclick = "return ConfirmDelete('Are you sure you wish to delete this Class Subjec?', " + item.RegisterCourseId + ", 'ClassSubject');", style = "color: darkred;font-size: 15px; margin-left: 10px", title = "Delete", @class = "glyphicon glyphicon-trash" })' +
                                '</td>' +
                                '</tr>';
            $("#classTable").find('tbody').append(tableRow);
        }
    }
    </text>
    }
    }
</script>

